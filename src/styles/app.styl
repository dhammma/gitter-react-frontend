html, body
  height 100%
  overflow hidden

body
  background-color #f2f2f2

#app
  height 100%

.app-container
  background #fff
  display flex
  flex-direction column
  //width 800px
  height 100%
  margin auto
  //border-left #solid 1px #dfe5ec
  //border-right #solid 1px #dfe5ec
  //border-bottom #solid 1px #dfe5ec

  header
    position relative
    display flex
    flex-direction row
    justify-content space-between
    height 48px
    background #5682a3
    overflow hidden
    border-bottom solid 2px darkblue

    h1
      margin-left 25px
      color lightgoldenrodyellow
      line-height 25px
      font-size 14px

    .room-info
      position absolute
      left 31%
      right 50px
      cursor pointer

      .room-name
        display inline-block
        color #fff
        font-weight bold
        font-size 13px
        line-height 22px
        margin-left 25px

      .room-members
        display inline-block
        color #b9cfe3
        font-weight normal
        font-size 11px
        margin-left 10px

      &:hover
        background #497799

        .room-members
          color #fff

    .user
      margin-right 15px
      transform scale(0.8)
      zoom 0.5
      border-radius 50%
      overflow hidden

  .content
    display flex
    flex-direction row
    height 100%